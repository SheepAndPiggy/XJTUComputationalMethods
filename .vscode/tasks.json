{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "C:\\Program Files\\mingw64\\bin\\g++.exe",  // 使用 MinGW 编译器
      "args": [
        "${workspaceFolder}/src/main.cpp",  // 源文件路径
        "${workspaceFolder}/chapters/*.cpp",
        "-o", "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",  // 输出路径
        "-I", "${workspaceFolder}/include",  // 头文件路径
        "-g3",
        "-O0",
        "-fno-omit-frame-pointer",
        "-std=c++17"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "编译主程序"
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Build and Run",
      "dependsOn": ["Build", "Run"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
